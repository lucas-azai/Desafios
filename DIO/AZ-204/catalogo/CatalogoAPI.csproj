<Project Sdk="Microsoft.NET.Sdk.Functions">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework> <!-- Altere para net7.0 ou net8.0, se necessário -->
    <AzureFunctionsVersion>v4</AzureFunctionsVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- Dependências do Azure Functions -->
    <PackageReference Include="Microsoft.Azure.Functions.Extensions" Version="1.1.0" />
    <PackageReference Include="Microsoft.NET.Sdk.Functions" Version="4.1.3" />

    <!-- Dependências para trabalhar com CosmosDB -->
    <PackageReference Include="Microsoft.Azure.WebJobs.Extensions.CosmosDB" Version="3.0.10" />

    <!-- Dependências para manipulação de JSON -->
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />

    <!-- Dependências para trabalhar com Azure Storage -->
    <PackageReference Include="Azure.Storage.Blobs" Version="12.14.1" />

    <!-- Dependências opcionais para facilitar injeção de dependência -->
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
  </ItemGroup>

</Project>
